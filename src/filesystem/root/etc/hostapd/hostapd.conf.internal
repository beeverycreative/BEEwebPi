# Basic configuration

interface=wlan0
ssid=BeeAP
channel=1
#bridge=br0
country_code=PT

# WPA and WPA2 configuration

macaddr_acl=0
#auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase=beeconfig
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
beacon_int=100
auth_algs=3
macaddr_acl=0
wmm_enabled=1
eap_reauth_period=360000000

# Hardware configuration

driver=nl80211
hw_mode=g
